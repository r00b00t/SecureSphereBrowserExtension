# SecureSphere Environment Variables

# SecureSphere Extension Environment Configuration
# Copy this file to .env and configure with your specific values

# =============================================================================
# API ENDPOINTS AND CREDENTIALS
# =============================================================================

# Breach Monitoring API (Optional - for breach checking features)
BREACH_API_URL=https://api.example.com/v1
BREACH_API_KEY=your_api_key_here
BREACH_API_USER_AGENT=SecureSphere-Extension/1.0.0

# SecureSphere Server API (Optional - for cloud sync features)
SECURESPHERE_API_URL=https://api.example.com
SECURESPHERE_API_KEY=your_api_key_here
SECURESPHERE_API_SECRET=your_api_secret_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_BREACH_MONITORING=true
ENABLE_CLOUD_SYNC=false
ENABLE_SIA_BACKUP=false
ENABLE_DEBUG_LOGS=false

# =============================================================================
# RATE LIMITING AND TIMEOUTS
# =============================================================================

# API request timeouts (in milliseconds)
BREACH_CHECK_TIMEOUT=15000
RECENT_BREACHES_TIMEOUT=10000
SECURESPHERE_API_TIMEOUT=30000

# Rate limiting
BREACH_CHECK_DELAY=1000
MAX_CONCURRENT_BREACH_CHECKS=3

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Message display duration (in milliseconds)
SUCCESS_MESSAGE_DURATION=4000
ERROR_MESSAGE_DURATION=6000
WARNING_MESSAGE_DURATION=5000

# Session timeouts (in minutes)
DEFAULT_SESSION_TIMEOUT=30
MAX_SESSION_TIMEOUT=240

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Encryption settings
ENCRYPTION_ITERATIONS=100000
STORAGE_KEY_LENGTH=256

# Session security
ENABLE_AUTO_LOGOUT=true
ENABLE_SESSION_TIMEOUT=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings (set to true for development)
DEVELOPMENT_MODE=false
MOCK_API_RESPONSES=false
VERBOSE_LOGGING=false

# Local development overrides (leave empty for production)
DEV_BREACH_API_URL=
DEV_SECURESPHERE_API_URL=